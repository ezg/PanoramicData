		</Rectangle>
    <GestureBarLib:GestureTab HorizontalAlignment="Left" VerticalAlignment="Top" Title="Home" Margin="13.167,16.755,0,0" x:Name="ToolsTab"/>
		<Canvas Margin="8,34.671,8,12.329" x:Name="ToolbarScroller" d:LayoutOverrides="GridBox"/>
