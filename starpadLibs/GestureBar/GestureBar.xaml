				<Ellipse.Fill>
					<LinearGradientBrush EndPoint="0.5,-0.151" StartPoint="0.5,0.904">
						<GradientStop Color="#FF616161" Offset="0"/>
						<GradientStop Color="#FFFFFFFF" Offset="1"/>
					</LinearGradientBrush>
				</Ellipse.Fill>
			</Ellipse>
			<Ellipse Stroke="#FF000000" Width="17.108" Height="17.108" x:Name="IncreaseSize" Canvas.Left="36.773" Canvas.Top="22.382" MouseLeftButtonUp="IncreaseSize_MouseLeftButtonUp">
				<Ellipse.Fill>
					<LinearGradientBrush EndPoint="0.5,-0.151" StartPoint="0.5,0.904">
						<GradientStop Color="#FF616161" Offset="0"/>
						<GradientStop Color="#FFFFFFFF" Offset="1"/>
					</LinearGradientBrush>
				</Ellipse.Fill>
			</Ellipse>
			<Path Stretch="Fill" Stroke="#FF000000" Width="9.667" Height="1" Canvas.Left="40.381" Canvas.Top="9.107" Data="M10.774667,30.382 L20.774333,30.382334">
				<Path.Fill>
					<LinearGradientBrush EndPoint="0.5,-0.151" StartPoint="0.5,0.904">
						<GradientStop Color="#FF616161" Offset="0"/>
						<GradientStop Color="#FFFFFFFF" Offset="1"/>
					</LinearGradientBrush>
				</Path.Fill>
			</Path>
			<Path Stretch="Fill" Stroke="#FF000000" Width="9.667" Height="1" Data="M10.774667,30.382 L20.774333,30.382334" Canvas.Left="40.608" Canvas.Top="30.215">
				<Path.Fill>
					<LinearGradientBrush EndPoint="0.5,-0.151" StartPoint="0.5,0.904">
						<GradientStop Color="#FF616161" Offset="0"/>
						<GradientStop Color="#FFFFFFFF" Offset="1"/>
					</LinearGradientBrush>
				</Path.Fill>
			</Path>
			<Path Stretch="Fill" Stroke="#FF000000" Width="9.667" Height="1" Data="M10.774667,30.382 L20.774333,30.382334" RenderTransformOrigin="0.5,0.5" Canvas.Left="40.608" Canvas.Top="30.215">
				<Path.Fill>
					<LinearGradientBrush EndPoint="0.5,-0.151" StartPoint="0.5,0.904">
						<GradientStop Color="#FF616161" Offset="0"/>
						<GradientStop Color="#FFFFFFFF" Offset="1"/>
