<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:DiagramDesigner">

    <ControlTemplate x:Key="RotateThumbTemplate" TargetType="{x:Type s:RotateThumb}">
        <Grid Width="30" Height="30">
            <Ellipse HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="DarkGray">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0.0" />
                        <GradientStop Color="#008DFF" Offset="0.25" />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>