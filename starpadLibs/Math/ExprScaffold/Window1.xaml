<Window x:Class="ExprScaffold.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <DockPanel>
    	<Menu DockPanel.Dock="Top" VerticalAlignment="Stretch">
    		<MenuItem Header="File">
    			<MenuItem Header="Quit" Click="MenuItem_Click"/>
    		</MenuItem>
    		<MenuItem Header="Size">
    			<Slider Orientation="Vertical" MinHeight="150" AutoToolTipPlacement="TopLeft" Minimum="0" Maximum="300" LargeChange="12" SmallChange="1" Value="24" TickPlacement="TopLeft" TickFrequency="12" x:Name="_fontSize"/>
    		</MenuItem>
    		<MenuItem Header="Engine" x:Name="_engineMenu"/>
    	</Menu>
    	<DockPanel LastChildFill="True">
    		<TextBox Text="" TextWrapping="Wrap" DockPanel.Dock="Top" x:Name="_exprEntry" KeyDown="_exprEntry_KeyDown"/>
    		<TextBox Text="" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="True" IsReadOnly="True" x:Name="_exprLog" VerticalScrollBarVisibility="Auto"/>
    	</DockPanel>
    </DockPanel>
</Window>
